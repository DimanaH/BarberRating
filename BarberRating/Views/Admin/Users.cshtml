@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Потребители";
}

<h2>Всички потребители</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Потребителско име</th>
            <th>Име</th>
            <th>Фамилия</th>
            <th>Роля</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Role</td>
                <td>
                    @if (user.Role != "Admin")
                    {
                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Редактирай</a>
                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Изтрий</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
