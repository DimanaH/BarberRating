@model Review
@{
    ViewData["Title"] = "Добави ревю";
}

<h2>Добави ревю за @ViewBag.BarberName</h2>

<form asp-action="Create" asp-route-id="@ViewBag.BarberId" method="post">
    <div class="form-group">
        <label asp-for="Rating">Оценка (1-5)</label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content">Коментар</label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success mt-2">Запиши</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
